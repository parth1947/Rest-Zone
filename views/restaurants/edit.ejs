<% include ../partials/header %>
<div class="container">
    <div class="row">
      <h1 style="text-align:center">Edit <%=restaurant.name %></h1>
     <div style="width:30%; margin:25px auto;">
      <form action="/restaurants/<%= restaurant._id %>?_method=PUT" method="POST" >
          <div class="form-group">
        <input class="form-control" type="text" value="<%=restaurant.name%>" name="restaurant[name]">
        </div>
         <div class="form-group">
        <input class="form-control" type="number" name="restaurant[price]" value="<%= restaurant.price %>"  min = "100.00" step = "10.00">
        </div>
        <div class="form-group">
        <input class="form-control" type="text" value="<%=restaurant.image%>"  name="restaurant[image]">
        </div>
        <div class="form-group">
        <input class="form-control" type="text" value="<%=restaurant.contact%>" name="restaurant[contact]">
        </div>
		  <div class="form-group">
        <input class="form-control" type="text" value="<%=restaurant.cuisine%>" name="restaurant[cuisine]">
        </div>
		  <div class="form-group">
        <input class="form-control" type="text" value="<%=restaurant.address%>" name="address">
        </div>
		<div class="form-group">
        <input class="form-control" type="text" value="<%=restaurant.description%>" name="restaurant[description]">
        </div>
		<div class="form-group">
    
    <input class="form-control" type="text" name="location" id="location" value="<%= restaurant.location %>">
</div>
        <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a href="/restaurants">Go Back</a>
     </div>

      
        
    </div>    
</div>

<% include ../partials/footer %>