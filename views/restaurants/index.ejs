<% include ../partials/header %>
<div class="container">
<header class="jumbotron">
    <div class="container">
    <h1>Welcome To RestZone!</h1>
    <p>View our hand-picked restaurants from all across Delhi</p>
    <a class="btn btn-primary btn-lg" href="/restaurants/new">Add a New Restaurant</a>
    </div>
</header>
 
 
   <div class="row text-center" style="display: flex; flex-wrap:wrap">
    <% for(var i=0;i<restaurants.length;i++){ %>
     <div class="col-md-3 col-sm-6">
       
       <div class="thumbnail">
             <img src="<%= restaurants[i].image  %>">
               <div class="caption">
                  <h4><%= restaurants[i].name %></h4>
              </div>
              <p>
                  <a  href="/restaurants/<%= restaurants[i]._id %>" class="btn btn-primary">More Info</a>
              </p>
       </div>
     </div> 
    <% } %>
   </div>
</div>
<% include ../partials/footer %>